{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://whats-service/schemas/event.error.schema.json",
  "title": "EventError",
  "description": "Server event: error during command processing.",
  "type": "object",
  "required": ["type", "sessionId", "timestamp", "payload"],
  "properties": {
    "type": { "const": "error" },
    "sessionId": { "type": "string", "format": "uuid" },
    "actionId": {
      "type": ["string", "null"],
      "format": "uuid",
      "description": "ActionId if error is scoped to a specific action."
    },
    "timestamp": { "type": "integer" },
    "payload": {
      "type": "object",
      "required": ["code", "message"],
      "properties": {
        "code": {
          "type": "string",
          "description": "Machine-readable error code.",
          "enum": [
            "INVALID_COMMAND",
            "SESSION_NOT_FOUND",
            "ASR_FAILED",
            "TTS_FAILED",
            "BUFFER_EMPTY",
            "INSUFFICIENT_AUDIO_BUFFER",
            "RATE_LIMITED",
            "INTERNAL_ERROR"
          ]
        },
        "message": {
          "type": "string",
          "description": "Human-readable error description."
        },
        "details": {
          "description": "Optional additional error context."
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
